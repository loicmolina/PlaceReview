<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProjetDevMobile.Views.NouvelleReviewPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="TextColor" Value="DarkGray"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Entry Text="{Binding Titre}" Placeholder="Titre"/>
            
            <Entry Text="{Binding Description}" Placeholder="Description"/>

            <Picker ItemsSource="{Binding TypesReview}"
                    SelectedItem ="{Binding Tag}"
                    Title="Tag"/>

            <Button Text="Prendre une photo" Command="{Binding PhotoCommand}"/>
            <Button Text="Valider" Command="{Binding ValiderCommand}"/>
        </StackLayout>
    </ContentPage.Content>
  
</ContentPage>